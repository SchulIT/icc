{% extends "main.html.twig" %}


{% block title %}{{ 'return_items.edit.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('return_items') }}">{{ 'return_items.label'|trans }}</a></li>
        <li class="breadcrumb-item">
            {{ item.student|student }}

            <span class="badge text-bg-primary">{{ item.type.displayName }}</span>
        </li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    {{ form_start(form) }}

    <div class="card">
        <div class="card-header">{{ 'label.general'|trans }}</div>
        <div class="card-body">
            {{ form_widget(form) }}
        </div>
    </div>

    <div class="buttons">
        <button type="submit" class="btn btn-primary btn-sm">
            <i class="fa-solid fa-save"></i> {{ 'actions.save'|trans }}
        </button>

        <a href="javascript:history.back()" class="btn btn-secondary btn-sm">
            {{ 'actions.cancel'|trans }}
        </a>
    </div>

    {{ form_end(form) }}
{% endblock %}