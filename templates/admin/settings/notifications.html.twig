{% extends "admin/settings/_settings.html.twig" %}

{% block title %}{{ 'admin.settings.notifications.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin') }}">{{ 'admin.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ 'admin.settings.label'|trans }}</li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block settings_content %}
    <div class="card">
        <div class="card-header">{{ 'label.general'|trans }}</div>

        <div class="card-body">
            {{ form_row(form.email_enabled) }}

            {% if isPushoverTokenMissing %}
                <div class="bs-callout bs-callout-danger">
                    <h5>{{ 'caution'|trans }}</h5>
                    <p>{{ 'admin.settings.notifications.pushover.token.missing'|trans }}</p>
                </div>
            {% endif %}

            {{ form_row(form.pushover_enabled) }}
        </div>
    </div>

{% endblock %}