{% extends "main.html.twig" %}

{% block title %}{{ 'admin.apps.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin') }}">{{ 'admin.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    {{ knp_menu_render('dataMenu', {'currentClass': 'active', 'template': 'admin/_menu.html.twig' }) }}

    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-9">
                {% if apps|length == 0 %}
                    <div class="bs-callout bs-callout-info">
                        <h4>{{ 'info.label'|trans }}</h4>

                        <p>{{ 'admin.apps.empty'|trans }}</p>
                    </div>
                {% else %}
                    <div class="card">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover card-table">
                                <colgroup>
                                    <col>
                                    <col class="column-lg">
                                    <col class="column-md">
                                </colgroup>

                                <thead>
                                <tr>
                                    <th>{{ 'label.name'|trans }}</th>
                                    <th>{{ 'label.description'|trans }}</th>
                                    <th></th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for app in apps %}
                                    <tr>
                                        <td>
                                            {{ app.name }}
                                        </td>
                                        <td>
                                            {{ app.description }}
                                        </td>
                                        <td>
                                            <a href="{{ path('edit_app', { uuid: app.uuid })}}" class="btn btn-primary btn-sm" title="{{ 'admin.apps.edit.label'|trans }}">
                                                <i class="fa fa-edit"></i>
                                            </a>

                                            <a href="{{ path('remove_app', { uuid: app.uuid })}}" class="btn btn-danger btn-sm" title="{{ 'admin.apps.remove.label'|trans }}">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                {% endif %}
            </div>

            <div class="col-md-3">
                <div class="card">
                    <div class="list-group list-group-flush">
                        <a href="{{ path('add_app') }}" class="list-group-item list-group-item-action">
                            <i class="fa fa-plus"></i> {{ 'admin.apps.add.label'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}