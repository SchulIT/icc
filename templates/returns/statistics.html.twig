{% extends "main.html.twig" %}

{% block title %}{{ 'return_items.statistics.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('return_items') }}">{{ 'return_items.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-9">

                <div class="row row-cols-2 g-4 mb-2">
                    <div class="col">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ 'return_items.statistics.count.all'|trans }}</h5>
                                <p class="display-6">{{ statistics.itemsCount }}</p>
                            </div>
                        </div>
                    </div>

                    <div class="col">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ 'return_items.statistics.count.students'|trans }}</h5>
                                <p class="display-6">{{ statistics.rows|length }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">{{ block('title') }}</div>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered card-table" data-table="true">
                            <colgroup>
                                <col>
                                <col class="column-80">
                                <col class="column-80">
                            </colgroup>

                            <thead>
                            <tr>
                                <th>{{ 'label.student'|trans }}</th>
                                <th>{{ 'label.count'|trans }}</th>
                                <th>{{ 'label.grade'|trans }}</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for row in statistics.rows %}
                                {% set student = students[row.studentId]|default(null) %}
                                {% if student is not null %}
                                <tr>
                                    <td>
                                        {{ student|student }}
                                    </td>
                                    <td>
                                        {{ row.itemsCount }}
                                    </td>
                                    <td>
                                        {{ row.grade }}
                                    </td>
                                </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-3 sticky-sidebar">
                <div class="card">
                    <div class="card-body">
                        <form method="get">
                            <div class="mb-2">
                                <label for="start" class="form-label">{{ 'label.start'|trans }}</label>

                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    <input class="form-control" type="date" id="start" name="start" data-trigger="submit" pattern="\d{4}-\d{2}-\d{2}" value="{{ start }}">
                                </div>
                            </div>

                            <div class="mb-2">
                                <label for="end" class="form-label">{{ 'label.end'|trans }}</label>

                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    <input class="form-control" type="date" id="end" name="end" data-trigger="submit" pattern="\d{4}-\d{2}-\d{2}" value="{{ end }}">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ 'info.label'|trans }}</h5>
                        <p>{{ 'return_items.statistics.generated_info'|trans({'%date%': statistics.createdAt|format_datetime }) }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}