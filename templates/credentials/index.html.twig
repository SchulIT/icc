{% extends "main.html.twig" %}

{% block title %}{{ 'credentials.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-9">
                {% if credentials|length == 0 %}
                    <div class="bs-callout bs-callout-info">
                        <h5>{{ 'info.label'|trans }}</h5>

                        <p>{{ 'credentials.empty'|trans }}</p>
                    </div>
                {% else %}
                    <div class="card">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover card-table">
                                <thead>
                                <tr>
                                    <th>{{ 'label.lms'|trans }}</th>
                                    <th>{{ 'label.username'|trans }}</th>
                                    <th>{{ 'label.password'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for credential in credentials %}
                                    <tr>
                                        <td>{{ credential.lms.name }}</td>
                                        <td>{{ credential.username }}</td>
                                        <td>{{ credential.password }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                {% endif %}
            </div>

            <div class="col-md-3 sticky-sidebar">
                <div class="card">
                    <div class="card-body">
                        {% include "_filter/student.html.twig" %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}